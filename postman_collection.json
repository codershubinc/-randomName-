{
    "info": {
        "name": "Video Streaming App API",
        "description": "Postman collection for all main endpoints in the video streaming app.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "List Movies",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "http://localhost:3000/movies/list",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "3000",
                    "path": [
                        "movies",
                        "list"
                    ]
                }
            }
        },
        {
            "name": "Upload Movie",
            "request": {
                "method": "POST",
                "header": [],
                "body": {
                    "mode": "formdata",
                    "formdata": [
                        {
                            "key": "file",
                            "type": "file"
                        },
                        {
                            "key": "title",
                            "value": "My Movie",
                            "type": "text"
                        },
                        {
                            "key": "description",
                            "value": "A test movie",
                            "type": "text"
                        },
                        {
                            "key": "releaseDate",
                            "value": "2025-09-29",
                            "type": "text"
                        },
                        {
                            "key": "genres",
                            "value": "Action,Drama",
                            "type": "text"
                        },
                        {
                            "key": "duration",
                            "value": "120",
                            "type": "text"
                        },
                        {
                            "key": "director",
                            "value": "Jane Doe",
                            "type": "text"
                        },
                        {
                            "key": "cast",
                            "value": "Actor1,Actor2",
                            "type": "text"
                        },
                        {
                            "key": "language",
                            "value": "English",
                            "type": "text"
                        },
                        {
                            "key": "country",
                            "value": "USA",
                            "type": "text"
                        },
                        {
                            "key": "rating",
                            "value": "8.5",
                            "type": "text"
                        },
                        {
                            "key": "tags",
                            "value": "test,upload",
                            "type": "text"
                        },
                        {
                            "key": "fileSize",
                            "value": "104857600",
                            "type": "text"
                        },
                        {
                            "key": "format",
                            "value": "mp4",
                            "type": "text"
                        },
                        {
                            "key": "thumbnailPath",
                            "value": "/path/to/thumbnail.jpg",
                            "type": "text"
                        }
                    ]
                },
                "url": {
                    "raw": "http://localhost:3000/movies/u?path=/media/swap/MVS/testUploads",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "3000",
                    "path": [
                        "movies",
                        "u"
                    ],
                    "query": [
                        {
                            "key": "path",
                            "value": "/media/swap/MVS/testUploads"
                        }
                    ]
                }
            }
        },
        {
            "name": "Read Movie Config",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "http://localhost:3000/movies/config/r/:id",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "3000",
                    "path": [
                        "movies",
                        "config",
                        "r",
                        ":id"
                    ]
                }
            }
        },
        {
            "name": "List Streaming Movies",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "http://localhost:3000/stream/movies/list",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "3000",
                    "path": [
                        "stream",
                        "movies",
                        "list"
                    ]
                }
            }
        },
        {
            "name": "Stream Movie",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Range",
                        "value": "bytes=0-1048575"
                    }
                ],
                "url": {
                    "raw": "http://localhost:3000/stream/movies/stream?path=/media/swap/MVS/testUploads/movie.mp4",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "3000",
                    "path": [
                        "stream",
                        "movies",
                        "stream"
                    ],
                    "query": [
                        {
                            "key": "path",
                            "value": "/media/swap/MVS/testUploads/movie.mp4"
                        }
                    ]
                }
            }
        },
        {
            "name": "Stream Movie with FFmpeg",
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "http://localhost:3000/stream/f?path=/media/swap/MVS/testUploads/movie.mp4",
                    "protocol": "http",
                    "host": [
                        "localhost"
                    ],
                    "port": "3000",
                    "path": [
                        "stream",
                        "f"
                    ],
                    "query": [
                        {
                            "key": "path",
                            "value": "/media/swap/MVS/testUploads/movie.mp4"
                        }
                    ]
                }
            }
        }
    ]
}